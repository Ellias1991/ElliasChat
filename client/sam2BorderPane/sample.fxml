<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sam2BorderPane.Controller">

    <stylesheets>
<URL value ="@/style.css"/>
    </stylesheets>

<top>
    <HBox fx:id="authPanel">
        <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="login" />
         <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="password"/>
        <Button text="auth" onAction="#AuthAttempt"  />
    </HBox>

</top>

    <center>
        <TextArea fx:id="textArea" editable="false" />

    </center>
    <bottom>
<HBox fx:id="msgPanel" visible="false" managed="false">
    <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Type your message here" onAction="#sendMsg"/>
    <Button text="Send" onAction="#sendMsg" />


</HBox>
    </bottom>


</BorderPane>
