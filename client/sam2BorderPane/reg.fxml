<VBox xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sam2BorderPane.RegController" alignment="CENTER">


    <stylesheets>
        <URL value="@/style.css"/>
    </stylesheets>

        <Label text="login"/>
        <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="login" />
         <Label text="password"/>
        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="password" />
         <Label text="nickname"/>
        <TextField fx:id="nicknameField" HBox.hgrow="ALWAYS" promptText="nickname" />
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" editable="false"/>


    <Button text="Registration"  HBox.hgrow="ALWAYS" onAction="#TryToReg" />




</VBox>
